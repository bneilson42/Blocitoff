<h1>New Item</h1>
<div class="row">
  <div class="col-md-3">
    <%= form_for @todo do |f| %>
    <div class="form-group">
      <%= f.text_field :description, class: 'form-control',placeholder: 'Description' %>
    </div>
    <%= f.submit 'Save', class: 'btn btn-info' %>
    <% end %>
  </div>
</div>
